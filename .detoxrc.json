{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "apps": {
    "ios.debug": {
      "type": "ios.app",
      "binaryPath": "dev-app/ios/build/Build/Products/Debug-iphonesimulator/StripeTerminalReactNativeDevApp.app",
      "build": "xcodebuild -workspace dev-app/ios/StripeTerminalReactNativeDevApp.xcworkspace -configuration Debug -scheme StripeTerminalReactNativeDevApp -destination 'platform=iOS Simulator,name=iPhone 11' -derivedDataPath dev-app/ios/build"
    },
    "ios.release": {
      "type": "ios.app",
      "binaryPath": "dev-app/ios/build/Build/Products/Release-iphonesimulator/StripeTerminalReactNativeDevApp.app",
      "build": "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -workspace dev-app/ios/StripeTerminalReactNativeDevApp.xcworkspace -configuration Release -scheme StripeTerminalReactNativeDevApp -destination 'platform=iOS Simulator,name=iPhone 11' -derivedDataPath dev-app/ios/build"
    },
    "android.debug": {
      "type": "android.apk",
      "binaryPath": "dev-app/android/app/build/outputs/apk/debug/app-debug.apk",
      "build": "cd dev-app/android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug ; cd -"
    },
    "android.release": {
      "type": "android.apk",
      "binaryPath": "dev-app/android/app/build/outputs/apk/release/app-release.apk",
      "build": "export RCT_NO_LAUNCH_PACKAGER=true && (cd dev-app/android; ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release ; cd -)"
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 13",
        "os": "iOS 15.4"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Nexus_6_API_29_2",
        "utilBinaryPaths": ["./test-butler-app.apk"]
      }
    },
    "ci-emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "TestingAVD"
      },
      "utilBinaryPaths": ["./test-butler-app.apk"]
    }
  },
  "configurations": {
    "ios": {
      "device": "simulator",
      "app": "ios.debug"
    },
    "ios.sim.release": {
      "device": "simulator",
      "app": "ios.release"
    },
    "android": {
      "device": "emulator",
      "app": "android.debug"
    },
    "android.emu.release": {
      "device": "ci-emulator",
      "app": "android.release"
    }
  }
}
